<div class="container" style="height: 80vh; display: flex; flex-direction: column; align-items: center; justify-content: center;">
  <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; font-family: 'Jost'; color: #333136;">
    <div style="display: flex; align-items: center; justify-content: center; line-height: 48px; font-size: 48px; font-weight: 400;">
      <%= image_tag 'logo_bigger.png', style: 'width: 200px;' %>
      <h1 class="ml-3" style="width: 200px;">YUMA FRUNEAU</h1>
    </div>
    <h2 class="mt-3 mb-4">Site en cours de construction</h2>
    <h3 class="mb-5">Veuillez vous autentifier pour acc√©der au site :</h3>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs" style="width: 30vw;">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "mot de passe" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Connexion", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
