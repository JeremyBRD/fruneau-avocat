<%# ---------------BANNER---------------  %>

<div class="banner">
  <div class="site-title mc900">
    <div class="avocate-underline">
      <h1>Avocate à la Cour</h1>
      <div id="underliner-avocate-home"></div>
    </div>
    <div class="paris-underline">
      <h2>Barreau de Paris</h2>
      <div id="underliner-paris-home"></div>
    </div>
  </div>

  <div class="hero-section mc900">
    <%= image_tag 'yuma_portrait_avatar.jpg', alt: 'photo de Yuma Funeau' %>
    <div class="social-links">
      <%# link_to '#' do %>
        <%#i class="fab fa-facebook-square"></%i>
      <%# end %>
      <%= link_to @contact_info.linkedin_url, target: '_blank' do %>
        <i class="fab fa-linkedin"></i>
      <% end %>
    </div>
  </div>

  <div class="title-pic">
    <div class="site-title">
      <div class="avocate-underline">
        <h1>Avocate à la Cour</h1>
        <div id="underliner-avocate-home"></div>
      </div>
      <div class="paris-underline">
        <h2>Barreau de Paris</h2>
        <div id="underliner-paris-home"></div>
      </div>
    </div>

    <div class="hero-section">
      <%= image_tag 'yuma_portrait_avatar.jpg', alt: 'photo de Yuma Funeau' %>
      <div class="social-links">
        <%# link_to '#' do %>
          <%#i class="fab fa-facebook-square"></%i>
        <%# end %>
        <%= link_to @contact_info.linkedin_url, target: '_blank' do %>
          <i class="fab fa-linkedin"></i>
        <% end %>
      </div>
    </div>
  </div>

  <%= render "components/call-to-action" %>

  <div class="tags-main-container">
    <%= react_component("Tags") %>
  </div>

</div>

<%# ---------------PRESENTATION---------------  %>
<div class="prestation-container">
  <div class="presentation">
    <div class="presentation-info">
      <h2>Présentation :</h2>
      <p>
        Après des études de droit à l'Université de Nice Sophia Antipolis, Maître Fruneau a obtenu un Master 2 Droit et gestion publique de l'université Paris 1 Panthéon Sorbonne.
      </p>
      <p>
        Diplômée de l'EFB (Ecole de Formation du Barreau), elle prête serment auprès du Barreau de Paris et décide d'ouvrir son propre cabinet.
      </p>
      <p>
        Maître Fruneau vous accueille du lundi au samedi dans son cabinet, uniquement sur rendez-vous.
      </p>
      <div class="presentation-langages">
        <h3>Langues parlées :</h3>
        <br>
        <div class="presentation-langages-list">
          <p>Français</p>
          <p>Anglais</p>
          <p>Italien</p>
          <p>Japonais</p>
        </div>
      </div>
    </div>
    <%= image_tag 'balance_justice.png', alt: 'Photo Balance de la justice' %>
  </div>
</div>

<%# ---------------CAROUSEL---------------  %>

<div class="prestation-section">

  <div class="carousel">
    <div class="prestation-underline">
      <h2>Les Prestations</h2>
      <div id="underliner-prestations-home"></div>
    </div>

    <%= react_component("Carousel") %>
  </div>

</div>
